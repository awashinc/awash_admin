<div class="search_form">
  <%= form_tag admin_cars_path, remote: true, class: "form-inline",  :method => :get, data: {turboform: true}  do %>
    <div class="form-group">
      <%= select_tag :type, options_for_select([["고객명", 1], ["차량명", 2], ["차번호", 3]], params[:type]), :class => "form-control" %>
      <%= text_field_tag :name, params[:name], :class => 'form-control'  %>
    </div>

    <%= submit_tag "Search", class: "btn btn-warning" %>
  <% end %>
</div>

<table class="table table-hover">
  <tr>
      <th>차량정보</th>
      <th>고객명</th>
      <th>지역</th>
      <th>관리일</th>
      <th>참고사항</th>
  </tr>
  <% for car in @cars %>
    <tr>
      <td><%= car.car_name %>( <%= car.car_number %> )</td>
      <td><%= car.owner_name %></td>
      <td><%= car.short_spot %></td>
      <td><%= car.service_period %></td>
      <td><%= car.issue  %></td>
      <td>
          <%= link_to "Edit", edit_admin_car_path(car), class: "btn btn-warning" %>
          <%= link_to "Destroy", [:admin, car], data: {confirm: 'Are you sure?'}, :method => :delete, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

  <p><%= link_to "New Admin/Car", new_admin_car_path, class: "btn btn-primary" %></p>
